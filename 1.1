                for (let weed of weedPositions) {
                    const rowDist = Math.abs(row - weed.row);
                    const colDist = Math.abs(col - weed.col);
                    if (rowDist < 2 || colDist < 2) {
                        tooClose = true;
                        break;
                    }
                }

                if (!tooClose) {
                    weedPositions.push({ row, col });
                    gameState.board[row][col] = 'weed';
                }
