            console.log('=== WEED SYSTEM STATE ===');
            console.log(`Move Counter: ${log.moveCounter} (${log.isOddMove ? 'ODD - Preview' : 'EVEN - Finalize'})`);
            console.log(`Total Weeds: ${log.totalWeeds}`);
            console.log(`Clusters: ${log.clusters}`);
