        function placeInitialWeeds() {
            const weedPositions = [];
            let attempts = 0;
            const maxAttempts = 100;

            while (weedPositions.length < 4 && attempts < maxAttempts) {
                attempts++;
                const row = Math.floor(Math.random() * GRID_SIZE);
                const col = Math.floor(Math.random() * GRID_SIZE);

                // Check if position is valid
                if (gameState.board[row][col] === 'rock') continue;

                // Check if weed is at least 2 tiles apart from other weeds
