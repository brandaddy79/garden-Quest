                isOddMove: gameState.moveCounter % 2 === 1,
                totalWeeds: 0,
                clusters: clusters.length,
                previews: gameState.weedPreviews.size,
                clusterDetails: clusters.map((c, i) => ({ id: i, size: c.length, positions: c }))
